!!! XHTML
%html
  %head
    %meta{"http-equiv" => "Content-Type", :content => "text/html", :charset => "UTF-8"}
    %title= @title
    != yield_content :html_head
    / Vendor CSS
    %link{:rel => "stylesheet", :href => "#{app_root}/vendor/css/metro-bootstrap.min.css"}
    / Vendor scripts
    %script{:language => "javascript", :src => "#{app_root}/vendor/js/jquery.min.js", :type => "text/javascript"}
    %script{:language => "javascript", :src => "#{app_root}/vendor/js/jquery-ui.min.js", :type => "text/javascript"}
    %script{:language => "javascript", :src => "#{app_root}/vendor/js/metro.min.js", :type => "text/javascript"}
    / User CSS
    / User scripts
    %script{:src => "#{app_root}/js/main.js", :charset => "UTF-8"}
  %body.metro
    #main
      != yield
    %hr

